{
  "name": "@v1/utils",
  "version": "0.4.3",
  "private": true,
  "description": "Common utilities for v1",
  "license": "MIT",
  "author": "Yoan Yomba",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./filesystem": {
      "types": "./dist/filesystem.d.ts",
      "default": "./dist/filesystem.js"
    },
    "./url": {
      "types": "./dist/url.d.ts",
      "default": "./dist/url.js"
    },
    "./file": {
      "types": "./dist/file.d.ts",
      "default": "./dist/file.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "bun run rm -rf dist *.tsbuildinfo",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint .  --max-warnings 0",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@v1/eslint": "workspace:^",
    "@v1/typescript": "workspace:^"
  }
}
